{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-confirm",
    "fs:allow-app-write",
    "fs:allowa-app-read",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/databases/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        }
      ]
    },
    "fs:default",
    "dialog:default",
    "shell:default"
  ],
  "capabilities": []
}